{
  "ts-node": {
    "files": true
  },
  "files": ["src/app.ts", "src/types.d.ts"],
  "compilerOptions": {
    "target": "ES2020",
    "module": "commonjs",
    "baseUrl": "./src",
    "paths": {
      "*": ["*"]
    },
    "outDir": "./dist",
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "skipLibCheck": true
  },
  "include": ["src/**/*.ts", "./src/types.d.ts"],
  "exclude": ["node_modules", "dist"]
}
